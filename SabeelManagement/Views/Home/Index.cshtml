
@{
    ViewData["Title"] = "Home Page";
}

@model SabeelRegistrationModel
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #f093fb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to bottom right, rgb(32, 38, 57) 11.4%, rgb(63, 76, 119) 70.2%));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(112.1deg, rgb(32, 38, 57) 11.4%, rgb(63, 76, 119) 70.2%);
    }

    .card-registration .select-input.form-control[readonly]:not([disabled]) {
        font-size: 1rem;
        line-height: 2.15;
        padding-left: .75em;
        padding-right: .75em;
    }

    .card-registration .select-arrow {
        top: 13px;
    }
</style>


<div class="text-center">
    <section class="vh-100 gradient-custom">
        <div class="container py-5 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">All Karachi Sabeel Management Registration</h3>
                            <form asp-controller="Home" asp-action="Index" method="post">

                                <div class="row  m-1">

                                    <div class="col-md-4 mb-4">
                                        <label asp-for="SabeelName">Sabeel Name</label>
                                    </div>
                                    <div class="col-md-8 mb-8">
                                        <div class="form-outline">
                                            <input asp-for="SabeelName" class="form-control form-control-lg" />
                                            <span asp-validation-for="SabeelName" class="text-danger"></span>
                                        </div>
                                    </div>
                                   
                                </div>

                                <div class="row  m-1">

                                    <div class="col-md-4 mb-4">
                                        <label asp-for="OrganizationName">Organization Name</label>
                                    </div>
                                    <div class="col-md-8 mb-8">
                                        <div class="form-outline">
                                           
                                            <input asp-for="OrganizationName" class="form-control form-control-lg" />
                                            <span asp-validation-for="OrganizationName" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>


                                <div class="row  m-1">

                                    <div class="col-md-4 mb-4">
                                        <label asp-for="CNIC">CNIC</label>
                                    </div>
                                    <div class="col-md-8 mb-8">
                                        <div class="form-outline">
                                            <input asp-for="CNIC" class="form-control form-control-lg" />
                                            <span asp-validation-for="CNIC" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <div class="row  m-1">

                                    <div class="col-md-4 mb-4">
                                        <label asp-for="MobileNumber">Mobile No</label>
                                    </div>
                                    <div class="col-md-8 mb-8">
                                        <div class="form-outline">
                                            <input type="tel"  asp-for="MobileNumber" class="form-control form-control-lg" />
                                            <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>


                                <div class="row  m-1">
                                    <div class="col-4">
                                        <label asp-for="AreaId">Area</label>
                                    </div>
                                    <div class="col-8">
                                        
                                        <select asp-for="AreaId" class="select form-select">
                                            <option value="1" disabled>Choose option</option>
                                            <option value="My">Maymar</option>
                                            <option value="IN">Incholi</option>
                                            <option value="4">Kharadar</option>
                                        </select>
                                        <span asp-validation-for="AreaId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row m-1">
                                    <div class="col-4">
                                        <label asp-for="Address">Address</label>
                                    </div>
                                    <div class="col-8">
                                        <div class="form-outline">
                                            
                                            <textarea asp-for="Address" class="form-control form-control-lg"></textarea>
                                            <span asp-validation-for="Address" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="mt-4 pt-2">
                                    <input type="submit" value="Submit" class="btn btn-primary btn-lg btn-dark" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

